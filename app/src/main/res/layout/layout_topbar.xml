<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textSize="@dimen/top_bar_text_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/top_bar_text_color"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_hot"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/topbar_hot"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/btn_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/topbar_search"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
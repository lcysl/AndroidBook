<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uestc.lcy.androidbook.modules.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_topbar"/>

        <!--展示内容界面-->
        <FrameLayout
            android:id="@+id/ll_main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <!--展示底部标签-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CDC9C9"/>

        <LinearLayout
            android:id="@+id/ll_main_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@null"
            android:layout_gravity="bottom"
            >

            <RadioGroup
                android:id="@+id/rg_main_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_main_home"
                    style="@style/tab_radio_button"
                    android:drawableTop="@drawable/main_home_icon"
                    android:text="@string/main_home"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/rb_main_sort"
                    style="@style/tab_radio_button"
                    android:drawableTop="@drawable/main_sort_icon"
                    android:text="@string/main_sort"
                    />

                <RadioButton
                    android:id="@+id/rb_main_project"
                    style="@style/tab_radio_button"
                    android:drawableTop="@drawable/main_project_icon"
                    android:text="@string/main_project"
                    />

                <RadioButton
                    android:id="@+id/rb_main_mine"
                    style="@style/tab_radio_button"
                    android:drawableTop="@drawable/main_mine_icon"
                    android:text="@string/main_my"
                    />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
